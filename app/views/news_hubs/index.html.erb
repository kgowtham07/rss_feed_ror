<% provide(:title, 'All Hubs') %>
<h1>All Hubs</h1>

<%= will_paginate @news_hub%>

<ul class="users">
  <% @news_hub.each do |news_hub| %>
    <li>
      <%= link_to news_hub.name, news_hub %>
      <%= link_to 'edit', edit_news_hub_path(news_hub) %>
      <% if current_user.admin?  %>
    |     <%= link_to "delete", news_hub, method: :delete,
                                  data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate @news_hub%>