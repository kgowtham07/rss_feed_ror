<%= link_to "Home", root_path %>
<% if logged_in? %>
    <%= link_to "Edit Profile", edit_user_path(current_user) %>


         
         <% if current_user.news_hubs.empty? %>
                
                <%= link_to "Add Source", source_path%>
         
         <% else %>
        
            <%
              subscription = current_user.news_hubs

              subscription.each do |source|
            %>

            <li>    
                <%= link_to source.name, source %>
            </li>
         
            <% end %>

            <%= link_to "Add Source", source_path%>
         
        <% end %>
        
   

<% else %>
    <%= link_to "Login", login_path %>
    <%= link_to "Sign Up", signup_path%>
<% end %>
